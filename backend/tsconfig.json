{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@/config/*": ["config/*"],
      "@/core/*": ["core/*"],
      "@/features/*": ["features/*"],
      "@/middleware/*": ["middleware/*"],
      "@/api/*": ["api/*"],
      "@/utils/*": ["utils/*"],
      "@/types/*": ["types/*"],
      "@/generated/*": ["generated/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
